<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_marginBottom="12dp"> <!-- Add marginBottom for spacing -->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stopVisaRequirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visa Requirement"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stopDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/stopTimeRemaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Remaining"
                android:textSize="16sp" />
        </LinearLayout>
    </GridLayout>
</LinearLayout>